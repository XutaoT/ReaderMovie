page{
    background-color: #fff;
    height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
}

.head-img {
  width: 100%;
  height: 460rpx;
}

.author-date {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.date {
  font-size: 24rpx;
  color: #999;
  margin-left: 30rpx;
  vertical-align: middle;
}

.audio {  
  width: 102rpx;
  height: 110rpx;
  margin-left: 620rpx;
  opacity: 0.6;
  position: absolute;
  top:310rpx;
}

.title {
  margin-left: 40rpx;
  margin-top: 30rpx;
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
}

.circle-img {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.circle-img image {
  width: 90rpx;
  height: 90rpx;
}

.share-img {
  margin-left: 30rpx;
}

.horizon {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  z-index: -99;
}

.detail {
  margin: 20rpx 30rpx 0 30rpx;
  letter-spacing: 2px;
  color: #999;
  font-size: 30rpx;
  font-weight: 400;
  line-height: 40rpx;
}
